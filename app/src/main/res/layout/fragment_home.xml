<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_activated"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/spinnaker"
                android:text="@string/today"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.elyeproj.loaderviewlibrary.LoaderImageView
                android:id="@+id/home_loader_anime_schedule"
                android:layout_width="335dp"
                android:layout_height="120dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                app:corners="35"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_anime_schedule_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingEnd="15dp"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="?android:selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_top_score"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/ranking"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_upcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="?android:selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_upcoming"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/upcoming"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="?android:selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_season"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/season"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="?android:selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_genre"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="@string/genres"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_activated"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/spinnaker"
                android:text="@string/popular"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_loader_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_popular_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_activated"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/spinnaker"
                android:text="Top people"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_loader_seiyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="5dp"
                    app:corners="60"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="60"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="60"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="60"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_popular_seiyu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="5dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/bg_activated"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/spinnaker"
                android:text="@string/airing"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/home_loader_airing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

                <com.elyeproj.loaderviewlibrary.LoaderImageView
                    android:layout_width="130dp"
                    android:layout_height="210dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:corners="25"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_airing_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>